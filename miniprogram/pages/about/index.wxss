page { background: #f6f6f6; }
.page { padding: 32rpx; display: flex; flex-direction: column; align-items: center; }

.logo_wrapper { margin: 24rpx 0 32rpx 0; }
.logo_circle { width: 200rpx; height: 200rpx; border: 2rpx dashed #999999; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #666666; overflow: hidden; }

.chat_panel { width: 92%; background: #ffffff; border: 2rpx solid #e5e5e5; border-radius: 16rpx; padding: 16rpx; margin-bottom: 24rpx; }
.chat_scroll { max-height: 600rpx; width: 100%; }
.msg { padding: 12rpx 16rpx; border-radius: 12rpx; margin: 10rpx 0; font-size: 28rpx; width: 100%; }
.msg.user { background: #e8f3ff; text-align: right; }
.msg.assistant { background: #f6f6f6; text-align: left; }
.chat_input_row { display: flex; align-items: center; margin-top: 12rpx; }
.chat_input { flex: 1; background: #f5f5f5; border-radius: 10rpx; padding: 12rpx; margin-right: 12rpx; }
.send_btn { background: #1677ff; color: #ffffff; }

.link_btn { width: 92%; margin: 12rpx 0; }


.oa_panel { width: 92%; margin: 10rpx 0 22rpx 0; background: #fff; border: 2rpx solid #e5e5e5; border-radius: 16rpx; overflow: hidden; display: flex; flex-direction: column; align-items: center; padding: 18rpx; }
.qr_img { width: 500rpx; max-width: 100%; }
.qr_tip { color: #888; font-size: 24rpx; margin-top: 12rpx; }
