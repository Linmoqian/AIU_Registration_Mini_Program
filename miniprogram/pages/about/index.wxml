<view class="page" capture-bind:touchstart="onTouchStart" capture-bind:touchend="onTouchEnd">

  <view class="logo_wrapper" bindtap="onTapBadge">
    <view class="logo_circle"><image class="logo_img" src="../../images/AIU会标.png" mode="aspectFit"></image></view>
  </view>

  <view class="chat_panel" wx:if="{{showChat}}">
    <scroll-view class="chat_scroll" scroll-y> 
      <block wx:for="{{messages}}" wx:key="index">
        <view class="msg {{item.role}}">{{item.content}}</view>
      </block>
    </scroll-view>
    <view class="chat_input_row">
      <input class="chat_input" placeholder="向协会机器人提问" value="{{inputText}}" bindinput="onInput"/>
      <button class="send_btn" size="mini" bindtap="send">发送</button>
    </view>
  </view>

  <view class="oa_panel card shadow-sm">
    <button class="link_btn" bindtap="openSite">协会公众号</button>
    <image class="qr_img" src="../../images/公众号二维码.jpg" mode="widthFix" show-menu-by-longpress="true" bindtap="previewQr"></image>
    <view class="qr_tip">长按识别二维码，或点击放大查看</view>
  </view>
  <button class="link_btn" bindtap="openSite">协会网站</button>
  <view class="support_text">www.scauaiu.xyz</view>
  
</view>
