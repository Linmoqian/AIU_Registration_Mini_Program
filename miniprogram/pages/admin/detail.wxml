<view class="page">
  <view class="card">
    <view class="avatar_box" wx:if="{{doc.avatarUrl}}" bindtap="previewAvatar">
      <image class="avatar" src="{{doc.avatarUrl}}" mode="aspectFill"></image>
    </view>
    <view class="row"><text class="label">姓名：</text>{{doc.name}}</view>
    <view class="row"><text class="label">手机号：</text>{{doc.mobile}}</view>
    <view class="row"><text class="label">微信号：</text>{{doc.wechat||'-'}}</view>
    <view class="row"><text class="label">出生日期：</text>{{doc.birth||'-'}}</view>
    <view class="row"><text class="label">性别：</text>{{doc.gender||'-'}}</view>
    <view class="row"><text class="label">政治面貌：</text>{{doc.political||'-'}}</view>
    <view class="row"><text class="label">学院：</text>{{doc.college||'-'}}</view>
    <view class="row"><text class="label">年级：</text>{{doc.grade||'-'}}</view>
    <view class="row"><text class="label">专业班级：</text>{{doc.majorClass||'-'}}</view>
    <view class="row"><text class="label">第一志愿：</text>{{doc.firstChoice||'-'}}</view>
    <view class="row"><text class="label">第二志愿：</text>{{doc.secondChoice||'-'}}</view>
    <view class="row"><text class="label">服从调剂：</text>{{doc.adjustable? '是':'否'}}</view>
    <view class="row"><text class="label">个人简介：</text>{{doc.intro||'-'}}</view>
    <view class="row"><text class="label">其它：</text>{{doc.other||'-'}}</view>
  </view>
</view>

