page { background: #f6f6f6; }
.page { padding: 24rpx; }
.toolbar { display: flex; gap: 12rpx; margin-bottom: 16rpx; }
.search { flex: 1; background: #fff; border-radius: 12rpx; padding: 12rpx; }
.picker { background: #fff; border-radius: 12rpx; padding: 12rpx; color: #333; }
.btn { background: #1677ff; color: #fff; }
.list { display: flex; flex-direction: column; gap: 16rpx; }
.card { background: #fff; border-radius: 16rpx; padding: 16rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,.06); }
.row { margin: 6rpx 0; color: #333; font-size: 26rpx; }
.label { color: #999; margin-right: 8rpx; }
.actions { display: flex; align-items: center; gap: 12rpx; margin-top: 12rpx; }
.pickerdept { background: #f7f7f9; padding: 10rpx 12rpx; border-radius: 10rpx; color: #333; }
.accept { background: #13c2c2; }
.reject { background: #ff4d4f; }

